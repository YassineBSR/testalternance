{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    

    <div class="container ">
        <h1>Liste article</h1>
        <a href="{{ path('app_articles_new') }}" class="btn btn-primary mb-4">Créer un article</a>
        <div class="container card">

       <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenue</th>
                <th>Image</th>
                <th>Crée a</th>
                <th>Modifier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.imageName }}</td>
                <td>{{ article.createAt ? article.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.updateAt ? article.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_articles_edit', {'id': article.id}) }}" class="btn btn-primary">edit</a>
                    {{ include('articles/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun article trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 
        </div>
        
    
    </div>
    

    
{% endblock %}
